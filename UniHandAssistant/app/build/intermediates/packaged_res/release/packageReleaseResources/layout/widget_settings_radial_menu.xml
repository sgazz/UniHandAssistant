<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Position buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPositionLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-120dp"
        android:layout_marginStart="-120dp"
        android:src="@drawable/ic_position_left"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPositionRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-120dp"
        android:layout_marginEnd="-120dp"
        android:src="@drawable/ic_position_right"
        app:fabSize="mini" />

    <!-- Sensitivity buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSensitivityLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-85dp"
        android:layout_marginStart="-85dp"
        android:src="@drawable/ic_sensitivity_low"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSensitivityMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-85dp"
        android:src="@drawable/ic_sensitivity_medium"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSensitivityHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-85dp"
        android:layout_marginEnd="-85dp"
        android:src="@drawable/ic_sensitivity_high"
        app:fabSize="mini" />

    <!-- Speed buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSpeedSlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-120dp"
        android:src="@drawable/ic_speed_slow"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSpeedNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_speed_normal"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSpeedFast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="-120dp"
        android:src="@drawable/ic_speed_fast"
        app:fabSize="mini" />

    <!-- Combination buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCombinationStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginStart="-120dp"
        android:src="@drawable/ic_combination_standard"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCombinationOpposite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="-120dp"
        android:src="@drawable/ic_combination_opposite"
        app:fabSize="mini" />

</FrameLayout>
